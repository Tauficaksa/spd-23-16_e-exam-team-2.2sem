
{
    "version": 2,
    "builds": [
      { "src": "*.js", "use": "@vercel/node" },
      { "src": "client/build/**", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/api/$1" },
      { "src": "/(.*)", "dest": "/client/build/$1" }
    ],
    "cleanUrls": true,
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/backend/api/$1" }
    ]
  }
  